<div class="container">
   
    <div class='jumbotron heading'>
        <h1>{{title}}</h1>
    
    </div>
      <div class="i-am-centered">
        <div class="row">
        <img src='assets/images/burger2.jfif' alt='burger'>
        <h1>Add a Burger</h1>

            <form>
                <input type='text' id='name'>
                <button class='btn btn-success'id='submitName'>Submit Burger</button>
            </form>
          </div>  
      </div>            

<main>

      <div class="col-sm-6">
          <h1>Available Burgers:</h1>
        {{#each burger}}
          {{#unless this.devoured}}
                <h3>{{this.id}} - {{this.burger_name}} <button class='devour btn btn-info'data-id="{{this.id}}"> Devour it</button> </h3>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col-sm-6">
          <h1>Devoured Burgers:</h1>
        {{#each burger}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                <h3> {{this.id}} - {{this.burger_name}} <button class='delete btn btn-danger' data-id="{{this.id}}"> X</button></h3>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
    
</main>

